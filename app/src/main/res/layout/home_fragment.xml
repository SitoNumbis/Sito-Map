<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"
            android:fitsSystemWindows="true"
            tools:context=".MainActivity"
            tools:ignore="MergeRootFrame">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="278dp"
                android:animateLayoutChanges="true"
                android:background="?attr/colorSurface"
                android:elevation="8dp"
                android:fitsSystemWindows="true"
                android:stateListAnimator="@animator/show_toolbar"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
     >

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:collapsedTitleGravity="center"
                    app:collapsedTitleTextAppearance="@style/TextAppearance.Trinidad.Toolbar.Text"
                    app:contentScrim="@color/trinidadColorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:statusBarScrim="@color/trinidadColorPrimary"
                    app:title="Trinidad"
                    app:titleEnabled="true"
                    app:toolbarId="@id/toolbar">

                    <ImageView
                        android:id="@+id/map_bottom_sheet_image_header"
                        android:layout_width="match_parent"
                        android:layout_height="278dp"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_header_test"
                        app:layout_collapseMode="parallax" />

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@android:color/transparent"
                        app:contentInsetStartWithNavigation="0dp"
                        app:layout_collapseMode="pin"
                        app:menu="@menu/menu_toolbar"
                        app:navigationIcon="@drawable/ic_menu_drawer_24"
                        app:titleTextColor="?attr/colorOnSurface" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/trinidad_scroll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/trinidad_header_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="left"
                        android:text="Por los senderos del saber"
                        android:textAppearance="?attr/textAppearanceHeadline5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Apple" />

                    <TextView
                        android:id="@+id/trinidad_header_subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="left"
                        android:text="Lo mas hermoso en ciudad trinidad"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/trinidad_header_title" />

                    <TextView
                        android:id="@+id/trinidad_desctiption_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:requiresFadingEdge="vertical"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="La ciudad colonial e histórica de Trinidad o Villa de la Santísima Trinidad, Patrimonio de la Humanidad, Ciudad Artesanal y Creativa del Mundo, Monumento"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/trinidad_header_subtitle" />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_list_recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:transitionName="shared_place_container"
                        android:layout_marginTop="8dp"
                        android:background="@color/trinidadMainBackground"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/trinidad_desctiption_txt"
                        tools:listitem="@layout/home_places_item" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:gravity="center"
                app:elevation="12dp"
                app:fabSize="mini"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|end"
                app:srcCompat="@drawable/ic_baseline_expand_more_24"
                app:tint="@color/trinidadColorOnPrimary" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <com.google.android.material.navigation.NavigationView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/home_main_drawer"
            android:layout_gravity="start" />

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
