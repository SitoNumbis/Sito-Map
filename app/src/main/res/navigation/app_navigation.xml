<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.inmersoft.trinidadpatrimonial.ui.trinidad.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_nav_home_to_detailsFragment"
            app:destination="@id/placeContainerDetailsFragment" />
        <action
            android:id="@+id/action_nav_home_to_routesContainerDetailsFragment"
            app:destination="@id/routesContainerDetailsFragment" />
    </fragment>


    <fragment
        android:id="@+id/nav_map"
        android:name="com.inmersoft.trinidadpatrimonial.ui.trinidad.map.fragments.MapFragment"
        android:label="MapFragment">
        <argument
            android:name="placeID"
            android:defaultValue="-1"
            app:argType="integer" />
        <action
            android:id="@+id/action_nav_map_to_detailsFragment"
            app:destination="@id/placeContainerDetailsFragment"
            app:popUpToInclusive="false" />
    </fragment>


    <fragment
        android:id="@+id/nav_qr"
        android:name="com.inmersoft.trinidadpatrimonial.ui.trinidad.qr.fragments.QrScannerFragment"
        android:label="QrScannerFragment">
        <action
            android:id="@+id/action_nav_qr_to_detailsFragment"
            app:destination="@id/placeContainerDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/placeContainerDetailsFragment"
        android:name="com.inmersoft.trinidadpatrimonial.ui.trinidad.details.place.PlaceContainerDetailsFragment"
        android:label="DetailsFragment">
        <argument
            android:name="placeID"
            android:defaultValue="-1"
            app:argType="integer" />
        <action
            android:id="@+id/action_detailsFragment_to_nav_map"
            app:destination="@id/nav_map"
            app:popUpTo="@id/placeContainerDetailsFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_placeContainerDetailsFragment_self"
            app:destination="@id/placeContainerDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/routesContainerDetailsFragment"
        android:name="com.inmersoft.trinidadpatrimonial.ui.trinidad.details.routes.RoutesContainerDetailsFragment"
        android:label="RoutesContainerDetailsFragment">
        <argument
            android:name="routeID"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
</navigation>