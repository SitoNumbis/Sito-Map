<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrinidadPatrimonial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/trinidadColorPrimary</item>
        <item name="colorPrimaryVariant">@color/trinidadColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/trinidadColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/trinidadColorSecondary</item>
        <item name="colorSecondaryVariant">@color/trinidadColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/trinidadColorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorEdgeEffect">@color/trinidadColorPrimary</item>
        <item name="android:fontFamily">@font/roboto_family</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.Trinidad.TextView.Small" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">4dp</item>
    </style>

    <style name="Widget.App.Button.FilledButton.IconOnly" parent="ShapeAppearanceOverlay.Trinidad.Circle.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.Trinidad.Circle.Button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.TrinidadPatrimonial">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextAppearance.Trinidad.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/trinidadColorOnPrimary</item>
    </style>

    <style name="TextAppearance.Trinidad.Toolbar.Text.Second" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/trinidadColorOnPrimary</item>
        <item name="android:fadingEdgeLength">4dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingMode">fade_in_out</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>